	<artifactId>tntconcept-web</artifactId>
	<packaging>war</packaging>

	<name>tntconcept-web</name>
	<description>Aplicación de TNT Concept. Genera un war para desplegar en el jboss.</description>

	<properties>
		<maven.compiler.plugin.version>3.10.1</maven.compiler.plugin.version>
	</properties>

	<build>
		<finalName>${project.final.name}-web</finalName>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${maven.compiler.plugin.version}</version>
					<configuration>
						<source>${compileSource}</source>
						<target>${compileSource}</target>
						<encoding>${sourceEncoding}</encoding>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>attached</goal>
						</goals>
						<configuration>
							<descriptors>
								<file>
									src/main/assemblies/installer.xml
								</file>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.plugin.version}</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<version>${maven.install.plugin.version}</version>
				<executions>
					<execution>
						<id>execution1_javacup</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>java_cup</groupId>
							<artifactId>javacup</artifactId>
							<version>0.10k</version>
							<packaging>jar</packaging>
							<file>${project.basedir}/jars_to_install/javacup-0.10k.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution2_jpivot</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>com.tonbeller.jpivot</groupId>
							<artifactId>jpivot</artifactId>
							<version>1.8.0</version>
							<packaging>jar</packaging>
							<file>${project.basedir}/jars_to_install/jpivot-1.8.0.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution3_eignbase-xom</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>org.eigenbase.xom</groupId>
							<artifactId>eigenbase-xom</artifactId>
							<version>1.0</version>
							<packaging>jar</packaging>
							<file>${project.basedir}/jars_to_install/eigenbase-xom-1.0.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution4_eigenbase-properties</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>org.eigenbase.util.property</groupId>
							<artifactId>eigenbase-properties</artifactId>
							<version>1.0</version>
							<packaging>jar</packaging>
							<file>${project.basedir}/jars_to_install/eigenbase-properties-1.0.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution5_mondrian</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>mondrian</groupId>
							<artifactId>mondrian</artifactId>
							<version>3.0.0</version>
							<packaging>jar</packaging>
							<file>${project.basedir}/jars_to_install/mondrian-3.0.0.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution6_eigenbase-resgen</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>org.eigenbase.resgen</groupId>
							<artifactId>eigenbase-resgen</artifactId>
							<version>1.0</version>
							<packaging>jar</packaging>
							<file>${project.basedir}/jars_to_install/eigenbase-resgen-1.0.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution7_tbutils-wcf</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>com.tonbeller.tbutils</groupId>
							<artifactId>tbutils-wcf</artifactId>
							<version>1.7.0</version>
							<packaging>jar</packaging>
							<file>${project.basedir}/jars_to_install/tbutils-wcf-1.7.0.jar</file>
						</configuration>
					</execution>
					<execution>
						<id>execution8_olap4j</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
<!--						<configuration>-->
<!--							<groupId>org.olap4j</groupId>-->
<!--							<artifactId>olap4j</artifactId>-->
<!--							<version>0.9.6</version>-->
<!--							<packaging>jar</packaging>-->
<!--							<file>${project.basedir}/jars_to_install/olap4j-0.9.6.jar</file>-->
<!--						</configuration>-->
					</execution>
					<execution>
						<id>execution9_olap4j</id>
						<phase>clean</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>com.tonbeller.wcf</groupId>
							<artifactId>wcf</artifactId>
							<version>1.7.0</version>
							<packaging>jar</packaging>
							<file>${project.basedir}/jars_to_install/wcf-1.7.0.jar</file>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

